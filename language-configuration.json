{
  "comments": {
    "lineComment": "<%--",
    "blockComment": ["<%--", "--%>"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<%", "%>"]
  ],
  "autoClosingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "\"", "close": "\""},
    {"open": "'", "close": "'"},
    {"open": "<%", "close": "%>"}
  ],
  "surroundingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "\"", "close": "\""},
    {"open": "'", "close": "'"},
    {"open": "<%", "close": "%>"}
  ],
  "indentationRules": {
    "increaseIndentPattern": "<%\\s*(block|if|foreach|else|method)",
    "decreaseIndentPattern": "<%\\s*(endblock|endif|endforeach|else|endmethod)"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*<%\\s*(if|foreach|block|method)",
      "action": {"indent": "indent"}
    },
    {
      "beforeText": "^\\s*<%\\s*(else|endif|endforeach|endblock|endmethod)",
      "action": {"indent": "outdent"}
    }
  ]
}
